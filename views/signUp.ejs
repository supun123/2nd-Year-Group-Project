  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">


    <!-- Main content -->

    <section class="content" style="height:1050px;">

      <div class="containerB" ;>
          <%var fname=false; %>
          <%var lname=false; %>
          <%var nic=false; %>
          <%var dob=false; %>
          <%var gender=false; %>
          <%var address1=false; %>
          <%var phoneNumber=false; %>
          <%var email=false; %>
          <%var location=false; %>
          <%var password=false; %>

          <% if (success) { %>
              <h2>Successful</h2>
          <% } else{%>
               <% if (errors) { %>
                      <% for(i=0;i<errors.length;i++){ %>
                          <%if(errors[i].param==='fname'){ %>
                                <% fname=errors[i].msg%>
                          <%}else if (errors[i].param==='lname'){%>
                                <% lname=errors[i].msg%>
                          <%}else if(errors[i].param==='nic'){ %>
                                <% nic=errors[i].msg%>
                          <%}else if(errors[i].param==='dob'){ %>
                                <% dob=errors[i].msg%>
                          <%}else if(errors[i].param==='gender'){ %>
                                <% gender=errors[i].msg%>
                          <%}else if(errors[i].param==='address1'){ %>
                                <% address1=errors[i].msg%>
                          <%}else if(errors[i].param==='phoneNumber'){ %>
                                <% phoneNumber=errors[i].msg%>
                          <%}else if(errors[i].param==='email'){ %>
                                <% email=errors[i].msg%>
                          <%}else if(errors[i].param==='location'){ %>
                                <% location=errors[i].msg%>
                          <%}else if(errors[i].param==='password'){ %>
                                <% password=errors[i].msg%>
                          <% } %>
                      <% } %>
                  <% } %>
          <% } %>


        <form  action="/user/signup" method="post">
            <% if (fname) { %>

          <div class="form-group has-error has-feedback">
            <label  for="fname">First Name:</label>
            <input type="text" class="form-control" id="fname" placeholder='<%=fname%>' name="fname">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="fname">First Name:</label>
            <input type="text" class="form-control" id="fname" placeholder="Enter First Name" name="fname">

          </div>
            <% }%>

            <% if (lname) { %>

          <div class="form-group has-error has-feedback">
            <label  for="lname">Last Name:</label>
            <input type="text" class="form-control" id="lname" placeholder='<%=lname%>' name="lname">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="lname">Last Name:</label>

            <input type="text" class="form-control" id="lname" placeholder="Enter Last Name" name="lname">

          </div>
            <% }%>

            <% if (nic) { %>

          <div class="form-group has-error has-feedback">
            <label  for="nic">Nic:</label>

            <input type="text" class="form-control" id="nic" placeholder='<%=nic%>'name="nic">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="nic">Nic:</label>

            <input type="text" class="form-control" id="nic" placeholder="Enter National Identity Card Number" name="nic">

          </div>
            <% }%>

            <% if (dob) { %>

          <div class="form-group has-error has-feedback">
            <label  for="dob">Birthday:</label>

            <input type="date" class="form-control" id="dob" placeholder='<%=dob%>' name="dob">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="dob">Birthday:</label>

            <input type="date" class="form-control" id="dob" placeholder="Enter Birthday" name="dob">

          </div>
            <% }%>


          <div class="form-group">
            <label  for="gender">Gender:</label>


            <input type="radio" name="gender" value="male" checked> Male
            <input type="radio" name="gender" value="female"> Female

          </div>

            <% if (address1) { %>

          <div class="form-group has-error has-feedback">
            <label  for="address1">Address</label>

            <input type="text" class="form-control" id="address1" placeholder='<%=address1%>' name="address1">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="address1">Address</label>

            <input type="text" class="form-control" id="address1" placeholder="Enter Address" name="address1">

          </div>
            <% }%>
            <% if (phoneNumber) { %>

          <div class="form-group has-error has-feedback">
            <label  for="phoneNumber">Phone Number:</label>

            <input type="tel" class="form-control" id="phoneNumber" placeholder='<%=phoneNumber%>' name="phoneNumber">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="phoneNumber">Phone Number:</label>

            <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter phone Number" name="phoneNumber">

          </div>
            <% }%>

            <% if (email) { %>

          <div class="form-group has-error has-feedback">
            <label  for="email">Email:</label>

            <input type="email" class="form-control" id="email" placeholder='<%=email%>' name="email">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="email">Email:</label>

            <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email">

          </div>
            <% }%>

            <% if (location) { %>

          <div class="form-group has-error has-feedback">
            <label  for="Loacation">Loacation:</label>

            <input readonly type="text" class="form-control" id="Loacation" placeholder='<%=location%>' name="location" >
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="Loacation">Loacation:</label>
            <input readonly type="text" class="form-control" id="Loacation" placeholder="Select Home on the map" name="location" >
          </div>
            <% }%>

            <div class="form-group">
                <label  for="username">User Name:</label>

                <input type="text" class="form-control" id="password" placeholder="User Name" name="username">

            </div>

            <% if (password) { %>
          <div class="form-group has-error has-feedback">
            <label  for="password">Password:</label>

            <input type="password" class="form-control" id="password" placeholder='<%=password%>' name="password">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>

            <% }else { %>
          <div class="form-group">
            <label  for="password">Password:</label>

            <input type="password" class="form-control" id="password" placeholder="Enter password" name="password">

          </div>
            <% }%>

            <% if (password) { %>

          <div class="form-group has-error has-feedback">
            <label  for="confirmPassword">Confirm Password:</label>

            <input type="password" class="form-control" id="confirmPassword" placeholder='<%=password%>' name="confirmPassword">
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          </div>
            <% }else { %>
          <div class="form-group">
            <label  for="confirmPassword">Confirm Password:</label>

            <input type="password" class="form-control" id="confirmPassword" placeholder="Enter Confirm Password" name="confirmPassword">

          </div>
            <% }%>

            <div class="form-group">
                <select class="form-control" name="role">
                    <option value= 2>Contributor</option>
                    <option value= 3>Admin</option>
                </select>
            </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </form>

      </div>
      <div id="googleMap" ></div>



    </section><!-- /.content -->

